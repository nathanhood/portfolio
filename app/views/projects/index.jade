extends ../shared/template

block content
  #myCarousel.carousel.slide

    ol.carousel-indicators
      li.active(data-target='#myCarousel', data-slide-to='0')
      li(data-target='#myCarousel', data-slide-to='1')
      li(data-target='#myCarousel', data-slide-to='2')
    .carousel-inner
      .item.active
        img.img-responsive(src='/img/carousel/node-tunes.png')
        .container
          .carousel-caption
            a.btn.btn-large.btn-primary(href='http://node-tunes.nathanhood.net') View Application
            pthis(3='', is='', an='', example='', layout='', with='', carousel='', that='', uses='', the='', bootstrap='', styles.='styles.')
      .item
        img.img-responsive(src='/img/carousel/checkers.png')
        .container
          .carousel-caption
            a.btn.btn-large.btn-primary(href='http://checkers.nathanhood.net') View Application
      .item(style='')
        img.img-responsive(src='/img/carousel/yahtzee.png')
        .container
          .carousel-caption
            a.btn.btn-large.btn-primary(href='http://yahtzee.nathanhood.net') View Application
    //Controls
    a.left.carousel-control(href='#myCarousel', data-slide='prev')
      span.icon-prev
    a.right.carousel-control(href='#myCarousel', data-slide='next')
      span.icon-next
  //
     /.carousel
  //
     Marketing messaging and featurettes==================================================
